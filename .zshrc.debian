# ------------------------------------------------------------------------------
# PAGER
# ------------------------------------------------------------------------------
export PAGER=lv				# ページャはlv
export LV="-c"				# -c でカラー表示する
# ------------------------------------------------------------------------------
# alias
# ------------------------------------------------------------------------------
alias ls="ls -F --color=auto --time-style=long-iso"	# 色付き (*/=>@|) 付加
alias pbcopy="xsel -i -b"		# クリップボードにコピー
alias pbpaste="xsel -o -b"		# クリップボードからペースト
# ------------------------------------------------------------------------------
# completion
# ------------------------------------------------------------------------------
compdef mosh=ssh			# mosh を ssh で補完する
# ------------------------------------------------------------------------------
# PATH
# ------------------------------------------------------------------------------
test -e ${HOME}/bin && export PATH=${HOME}/bin:${PATH}
