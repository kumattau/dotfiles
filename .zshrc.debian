# ------------------------------------------------------------------------------
# alias
# ------------------------------------------------------------------------------
alias ls="ls -F --color=auto --time-style=long-iso --show-control-chars"
alias pbcopy="xsel -i -b"		# クリップボードにコピー
alias pbpaste="xsel -o -b"		# クリップボードからペースト
# ------------------------------------------------------------------------------
# completion
# ------------------------------------------------------------------------------
compdef mosh=ssh			# mosh を ssh で補完する
# ------------------------------------------------------------------------------
# PATH
# ------------------------------------------------------------------------------
export PATH=${HOME}/bin:${PATH}
